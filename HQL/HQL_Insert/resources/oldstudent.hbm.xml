<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC 
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

	<!-- mapping file -->
<hibernate-mapping>
  <class name="beans.OldStudent" table="oldstudent" schema="hib"> <!-- schema == DB name in MySql -->
  <id name="id"/>
  <property name="name" />
  <property name="email" />
  <property name="address" />

  </class>
</hibernate-mapping>